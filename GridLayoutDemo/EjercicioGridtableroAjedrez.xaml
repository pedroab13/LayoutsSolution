        <BoxView Color="White" Grid.Row="0" Grid.Column="6" WidthRequest="50" HeightRequest="50"/>
        <BoxView Color="Black" Grid.Row="0" Grid.Column="7" WidthRequest="50" HeightRequest="50"/>

